# Use the official Python base image
FROM python:3-slim

# Install Bluetooth-related packages
RUN apt-get update && \
    apt-get install -y bluez bluez-hcidump && \
    apt-get clean

# Set the working directory in the container
WORKDIR /app

# Copy the Python dependencies file
COPY requirements.txt .

# Install the Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the main application
COPY ruuvi2mqtt.py .
COPY settings.py.example .
# Copy settings.py if it exists (will be ignored if not present)
COPY settings.py* ./

# Copy the web application
COPY webapp/ /app/webapp/

# Copy and set permissions for entrypoint script
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose web interface port
EXPOSE 5883

# Run both applications via entrypoint
CMD ["/entrypoint.sh"]
